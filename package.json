{
	"name": "@sixach/icon-library",
	"version": "0.1.0",
	"description": "Sixa icons library.",
	"keywords": [
		"sixa",
		"gutenberg",
		"wordpress",
		"icons",
		"svg"
	],
	"homepage": "https://github.com/sixach/icon-library#readme",
	"bugs": {
		"url": "https://github.com/sixach/icon-library/issues"
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/sixach/icon-library.git"
	},
	"license": "GPL-3.0-or-later",
	"author": "sixa AG",
	"sideEffects": false,
	"main": "build/index.js",
	"module": "build/index.js",
	"scripts": {
		"build": "cross-env BABEL_ENV=default NODE_ENV=production && rm -rf build && mkdir build && babel src --out-dir build --copy-files",
		"check-engines": "wp-scripts check-engines",
		"check-licenses": "wp-scripts check-licenses",
		"format": "wp-scripts format",
		"lint:js": "wp-scripts lint-js",
		"lint:js-fix": "wp-scripts lint-js --fix",
		"lint:pkg-json": "wp-scripts lint-pkg-json",
		"packages-update": "wp-scripts packages-update",
		"prepublishOnly": "npm run format && npm run build && npm run docs",
		"test:e2e": "wp-scripts test-e2e",
		"test:unit": "wp-scripts test-unit-js",
		"docs": "documentation build src/** -f html --github -o docs"
	},
	"husky": {
		"hooks": {
			"pre-commit": "lint-staged"
		}
	},
	"lint-staged": {
		"*.{js,ts,tsx}": [
			"npm run lint:js",
			"npm run format:js"
		]
	},
	"babel": {
		"presets": [
			"@babel/preset-env",
			"@babel/preset-react"
		]
	},
	"devDependencies": {
		"@babel/cli": "7.14.3",
		"@babel/core": "7.14.3",
		"@babel/preset-env": "7.14.4",
		"@babel/preset-react": "7.13.13",
		"@wordpress/scripts": "16.1.1",
		"cross-env": "7.0.3",
		"husky": "^6.0.0",
		"lint-staged": "11.0.0",
		"lodash": "4.17.21"
	},
	"peerDependencies": {
		"@wordpress/icons": "4.x",
		"@wordpress/primitives": "2.x"
	},
	"publishConfig": {
		"registry": "https://npm.pkg.github.com/"
	}
}
