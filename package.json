{
	"name": "@sixach/icon-library",
	"version": "1.0.0",
	"description": "Icons library.",
	"keywords": [
		"sixa",
		"gutenberg",
		"wordpress",
		"icons",
		"svg"
	],
	"homepage": "https://github.com/sixach/icon-library#readme",
	"bugs": {
		"url": "https://github.com/sixach/icon-library/issues"
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/sixach/icon-library.git"
	},
	"license": "GPL-3.0-or-later",
	"author": "sixa AG",
	"sideEffects": false,
	"main": "build/index.js",
	"module": "build/index.js",
	"scripts": {
		"build": "cross-env BABEL_ENV=default NODE_ENV=production && rm -rf build && mkdir build && babel src --out-dir build --no-copy-ignored",
		"check-engines": "wp-scripts check-engines",
		"check-licenses": "wp-scripts check-licenses",
		"format": "wp-scripts format",
		"lint:js": "wp-scripts lint-js",
		"lint:js-fix": "wp-scripts lint-js --fix",
		"lint:pkg-json": "wp-scripts lint-pkg-json",
		"packages-update": "wp-scripts packages-update",
		"prepublishOnly": "npm run format && npm run build"
	},
	"husky": {
		"hooks": {
			"pre-commit": "lint-staged"
		}
	},
	"lint-staged": {
		"*.{js,ts,tsx}": [
			"npm run lint:js",
			"npm run format:js"
		]
	},
	"devDependencies": {
		"@babel/cli": "^7.14.8",
		"@babel/core": "^7.14.8",
		"@babel/preset-env": "^7.14.8",
		"@babel/preset-react": "7.14.5",
		"@wordpress/scripts": "18.0.1",
		"cross-env": "7.0.3",
		"husky": "^7.0.1",
		"lint-staged": "^11.1.1",
		"lodash": "4.17.21"
	},
	"publishConfig": {
		"registry": "https://npm.pkg.github.com/"
	}
}
